html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section,
time, mark, audio, video {
  margin: 0;
  padding: 0;
}

html {
  position: relative;
  min-height: 100%;
}

body{	
  width: 100%;
  height: 100%;
  min-width: 800px;
  background: #000;
}

canvas{  
	width: 100%; 
	height: 100%;
	position: absolute;	
}
.warning{
	margin: 10px 0px;
	padding: 10px 10px;
	background: rgba( 180, 163, 144, 0.4);
}
.ui-dialog-titlebar {display: none;}

div.v-t {
	width:1em; 
	line-height:1em; 
	font-size:19px; 
	background-color:#ffffc9;
	margin: 15px 5px;
	cursor: pointer;
}

#downPanelControl{
	background: url(http://placehold.it/250x50) no-repeat;
	width: 250px;
	height: 50px;
	position: absolute;
	bottom: 0px;
	margin:-50px 0 0 -125px;
	left:50%;
}

#editting, #addAdvent, #avtor, #baner, #showAdvent{
	display: none;
}

#addAdvent{
	background: url(<%= asset_path 'design/fonAdvent.jpg' %>) no-repeat;
	
}

#addAdvent img{
	width: 95px;
	float: left;
	margin-bottom: 5px;
	margin-top: 25px;
	margin-left: 30px;
}

#addAdvent textarea{
	width: 93.2%;
	resize: none;
	height: 80px;
	float: right;
}

.tags{
	width: 300px;
	float: right;
	height: 30px;
	margin-bottom: 7px;
	padding: 0px 5px;
}

#addAdvent textarea, .tags{
	background: rgba( 180, 163, 144, 0.4);
	border: 1px solid #6f5e4a;
}

.tags::-webkit-input-placeholder{color: #887f75; padding: 0px 5px;}
.tags:-moz-placeholder{color: #887f75; padding: 0px 5px;}
.tags::-moz-placeholder{color: #887f75; padding: 0px 5px;}
.tags:-ms-input-placeholder{color: #887f75; padding: 0px 5px;}
#addAdvent textarea::-webkit-input-placeholder{color: #887f75; padding: 0px 5px;}
#addAdvent textarea:-moz-placeholder{color: #887f75; padding: 0px 5px;}
#addAdvent textarea::-moz-placeholder{color: #887f75; padding: 0px 5px;}
#addAdvent textarea:-ms-input-placeholder{color: #887f75; padding: 0px 5px;}

.panelButton{margin-left: 7px;}

.panelButton li.opacityNo:hover, .footer div.opacity07:hover{
	 -moz-opacity: 1;
    -khtml-opacity: 1;
    opacity: 1;
    filter: alpha(opacity=100);
}

.panelButton li.opacity07, .footer div.opacity07{
	 -moz-opacity: 0.7;
    -khtml-opacity: 0.7;
    opacity: 0.7;
    filter: alpha(opacity=70);
}

.panelButton li{
	margin-right: 5px;
	width: 55px;
	height: 50px;
	float: left;
	list-style-type: none;
	cursor: pointer;
}

.addAdvent{background: url(<%= asset_path 'design/icon.jpg' %>) -7px -8px no-repeat;}
.editting{background: url(<%= asset_path 'design/icon.jpg' %>) -245px -8px no-repeat;}
.avtor{background: url(<%= asset_path 'design/icon.jpg' %>) -323px -87px no-repeat;}
.baner{background: url(<%= asset_path 'design/icon.jpg' %>) -165px -8px no-repeat;}

#slider-range-max{ margin: 10px 0px;}

.footer{
	position: absolute;
	left: 0px;
}