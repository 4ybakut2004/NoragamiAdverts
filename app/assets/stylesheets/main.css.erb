/*url(<%= asset_path 'design/menu.png' %>)*/
html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section,
time, mark, audio, video {
  margin: 0;
  padding: 0;
}

html {
  position: relative;
  min-height: 100%;
}

body{	
  width: 100%;
  height: 100%;
  min-width: 800px;
  background: #000;
  font-size: 12px;
  font-family: cursive;
}

canvas{  
	width: 100%; 
	height: 100%;
	position: absolute;	
}

.warning{
	margin: 10px 0px;
	padding: 10px 10px;
	background: rgba( 180, 163, 144, 0.4);
}

.addAdventWidget.ui-widget-content, .edittingWidget.ui-widget-content, .avtorWidget.ui-widget-content, .banerWidget.ui-widget-content, .showAdventWidget.ui-widget-content{
	background: transparent !important;
	outline: 0;
	border: 0;
}

.ui-dialog-titlebar {display: none;}

#downPanelControl{
	background: url(<%= asset_path 'design/menu.png' %>) no-repeat;
	width: 401px;
	height: 58px;
	position: absolute;
	bottom: 0px;
	margin:-50px 0 0 -199px;
	left:50%;
}

#editting, #addAdvent, #avtor, #baner, #showAdvent{
	display: none;
	background: url(<%= asset_path 'design/board.png' %>) no-repeat;
	padding: 10px 20px;
	box-sizing: border-box;
}

#addAdvent textarea{
	width: 300px;
	resize: none;
	height: 120px;
	font-size: 12px;
	padding-top: 3px !important;
	padding-right: 60px !important;
}

#buttonCansel{
	width: 24px;
	height: 24px;
	border: 0;
	outline: 0;
	position: absolute;
	right: 25px;
	top: 25px;
	background: url(<%= asset_path 'design/close.png' %>) no-repeat;
}

#buttonAddAdvent{
	width: 64px;
	height: 62px;
	border: 0;
	outline: 0;
	position: absolute;
	left: 200px;
	bottom: 5px;
	background: url(<%= asset_path 'design/ok.png' %>) 0 0 no-repeat;
}

#buttonAddAdvent:hover{background: url(<%= asset_path 'design/ok.png' %>) 0 -62px no-repeat; cursor: pointer;}

.yato{
	width: 132px;
	height: 172px;
	border: 0;
	outline: 0;
	position: absolute;
	right: 25px;
	bottom: 30px;
	background: url(<%= asset_path 'design/yato.png' %>) no-repeat;
}

.tags{
	width: 300px;
	height: 25px;
}

#addAdvent textarea, .tags{background: #f9f7ec; border: 1px solid #D1C7C4; font-family: cursive; font-size: 14px;}

.tags::-webkit-input-placeholder{color: #887f75; font-family: cursive;}
.tags:-moz-placeholder{color: #887f75; font-family: cursive;}
.tags::-moz-placeholder{color: #887f75; font-family: cursive;}
.tags:-ms-input-placeholder{color: #887f75; font-family: cursive;}
#addAdvent textarea::-webkit-input-placeholder{color: #887f75; font-size: 14px; font-family: cursive;}
#addAdvent textarea:-moz-placeholder{color: #887f75; font-size: 14px; font-family: cursive;}
#addAdvent textarea::-moz-placeholder{color: #887f75; font-size: 14px; font-family: cursive;}
#addAdvent textarea:-ms-input-placeholder{color: #887f75; font-size: 14px; font-family: cursive;}

.panelButton{
	width: 260px;
	margin: 0px auto;
	margin-top: 12px;
}

.panelButton li.opacityNo:hover, .v-t.opacity07:hover, .closeDialog.opacity07:hover{
	 -moz-opacity: 1;
    -khtml-opacity: 1;
    opacity: 1;
    filter: alpha(opacity=100);
}

.panelButton li.opacity07, .v-t.opacity07, .closeDialog.opacity07{
	 -moz-opacity: 0.7;
    -khtml-opacity: 0.7;
    opacity: 0.7;
    filter: alpha(opacity=70);
	cursor: pointer;
	-moz-transition: opacity 0.5s 0.1s ease;
    -o-transition: opacity 0.5s 0.1s ease;
    -webkit-transition: opacity 0.5s 0.1s ease;
}

.panelButton li{
	margin-right: 20px;
	width: 43px;
	height: 40px;
	float: left;
	list-style-type: none;
	cursor: pointer;
}

.addAdvent{background: url(<%= asset_path 'design/buttons.png' %>) -43px 0px no-repeat;}
.editting{background: url(<%= asset_path 'design/buttons.png' %>) 0px 0px no-repeat;}
.avtor{background: url(<%= asset_path 'design/buttons.png' %>) -86px 0px no-repeat;}
.baner{background: url(<%= asset_path 'design/buttons.png' %>) -129px 0px no-repeat;}

.addAdvent:hover, .addAdvent.img{background: url(<%= asset_path 'design/buttons.png' %>) -43px -40px no-repeat;}
.editting:hover, .editting.img{background: url(<%= asset_path 'design/buttons.png' %>) 0px -40px no-repeat;}
.avtor:hover, .avtor.img{background: url(<%= asset_path 'design/buttons.png' %>) -86px -40px no-repeat;}
.baner:hover, .baner.img{background: url(<%= asset_path 'design/buttons.png' %>) -129px -40px no-repeat;}

#slider-range-max{ 
	margin-right: 40px;
	margin-top: 10px;
}

#addAdvent .panelAddAdventFon *{
	-webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
	border: 0;
	margin: 5px 10px;
	padding: 0 5px;
	outline: 0;
}

p{
	font-size: 16px; 
	color: #523f2d;
}

.headAdvent{
	width: 186px;
	height: 35px;
	background: url(<%= asset_path 'design/addMessage.png' %>);
	margin-left: 50px !important;
}

#addAdvent img{
	float: left;
	margin-top: -1px !important;
}

.panelAddAdventFon{margin: 50px;}

#editting .whitePanel{margin: 90px 70px;}
#baner  .whitePanel{padding: 55px 20px 0px 54px;}
#showAdvent .whitePanel {margin: 85px 50px 20px 50px;}

.textarea1{width: 120px;  resize: none; height: 20px}
.textarea2{width: 120px;  resize: none; height: 20px}

.error{
	width: 150px;
	background: #e6d7ce;
	position: absolute;
	right: 30px;
	bottom: 65px;
	border: 1px solid #A8A0A0;
