html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section,
time, mark, audio, video {
  margin: 0;
  padding: 0;
}

html {
  position: relative;
  min-height: 100%;
}

body{	
  width: 100%;
  height: 100%;
  min-width: 800px;
  background: #000;
  font-size: 12px
}

canvas{  
	width: 100%; 
	height: 100%;
	position: absolute;	
}

.warning{
	margin: 10px 0px;
	padding: 10px 10px;
	background: rgba( 180, 163, 144, 0.4);
}

.addAdventWidget.ui-widget-content, .edittingWidget.ui-widget-content{
	background: transparent !important;
	outline: 0;
	border: 0;
}

.ui-dialog .ui-dialog-content{
	padding: 40px 40px !important;
}

.ui-dialog-titlebar {display: none;}

#downPanelControl{
	background: url(<%= asset_path 'design/menu.png' %>) no-repeat;
	width: 427px;
	height: 70px;
	position: absolute;
	bottom: 0px;
	margin:-50px 0 0 -213px;
	left:50%;
}

#editting, #addAdvent, #avtor, #baner, #showAdvent{
	display: none;
}

#addAdvent{
	background: url(<%= asset_path 'design/board.png' %>) no-repeat;
}

#addAdvent img{
	width: 121px;
	position: absolute;
	top: 100px;
	left: 70px;
	z-index: 2;
}

#addAdvent textarea{
	width: 380px;
	resize: none;
	height: 40px;
	font-size: 12px;
	padding-top: 3px !important;
}

#buttonCansel{
	width: 24px;
	height: 24px;
	border: 0;
	outline: 0;
	position: absolute;
	right: 12px;
	top: 12px;
	background: url(<%= asset_path 'design/close.png' %>) no-repeat;
}

#buttonAddAdvent{
	width: 88px;
	height: 25px;
	border: 0;
	outline: 0;
	position: absolute;
	left: 200px;
	bottom: 5px;
	background: url(<%= asset_path 'design/send.png' %>) no-repeat;
}

.tags{
	width: 380px;
	height: 25px;
}

#addAdvent textarea, .tags{background: #eee5d6;}

.tags::-webkit-input-placeholder{color: #887f75;}
.tags:-moz-placeholder{color: #887f75;}
.tags::-moz-placeholder{color: #887f75;}
.tags:-ms-input-placeholder{color: #887f75;}
#addAdvent textarea::-webkit-input-placeholder{color: #887f75; font-size: 12px}
#addAdvent textarea:-moz-placeholder{color: #887f75; font-size: 12px}
#addAdvent textarea::-moz-placeholder{color: #887f75; font-size: 12px}
#addAdvent textarea:-ms-input-placeholder{color: #887f75; font-size: 12px}

.panelButton{
	width: 300px;
	margin: 0px auto;
	margin-top: 15px;
}

.panelButton li.opacityNo:hover, .v-t.opacity07:hover, .closeDialog.opacity07:hover{
	 -moz-opacity: 1;
    -khtml-opacity: 1;
    opacity: 1;
    filter: alpha(opacity=100);
}

.panelButton li.opacity07, .v-t.opacity07, .closeDialog.opacity07{
	 -moz-opacity: 0.7;
    -khtml-opacity: 0.7;
    opacity: 0.7;
    filter: alpha(opacity=70);
	cursor: pointer;
	-moz-transition: opacity 0.5s 0.1s ease;
    -o-transition: opacity 0.5s 0.1s ease;
    -webkit-transition: opacity 0.5s 0.1s ease;
}

.panelButton li{
	margin-right: 5px;
	width: 70px;
	height: 55px;
	float: left;
	list-style-type: none;
	cursor: pointer;
}

.addAdvent{background: url(<%= asset_path 'design/buttons.png' %>) -70px 0px no-repeat;}
.editting{background: url(<%= asset_path 'design/buttons.png' %>) 0px 0px no-repeat;}
.avtor{background: url(<%= asset_path 'design/buttons.png' %>) -140px 0px no-repeat;}
.baner{background: url(<%= asset_path 'design/buttons.png' %>) -210px 0px no-repeat;}

.addAdvent:hover, .addAdvent.img{background: url(<%= asset_path 'design/buttons.png' %>) -70px -55px no-repeat;}
.editting:hover, .editting.img{background: url(<%= asset_path 'design/buttons.png' %>) 0px -55px no-repeat;}
.avtor:hover, .avtor.img{background: url(<%= asset_path 'design/buttons.png' %>) -140px -55px no-repeat;}
.baner:hover, .baner.img{background: url(<%= asset_path 'design/buttons.png' %>) -210px -55px no-repeat;}

#slider-range-max{ margin: 10px 0px;}

.panelAddAdvent{
	width: 450px;
	height: 200px;
	background: url(<%= asset_path 'design/form.png' %>);
	border: 2px solid #4d3710;
	-moz-box-shadow: 5px 4px 8px rgba(0, 0, 0, 0.5);
    -webkit-box-shadow: 5px 4px 8px rgba(0, 0, 0, 0.5);
    box-shadow: 5px 4px 8px rgba(0, 0, 0, 0.5);
	margin-left: 160px;
	margin-top: 50px;
	position: absolute
}

.panelAddAdventFon{
	width: 400px;
	height: 150px;
	background: #dfd0b9;
	border: 2px solid #4d3710;
	margin-top: 15px;
	margin-left: 25px;
}

.panelAddAdvent.rotation{
	-webkit-transform: rotate(5deg); /* Chrome y Safari */
	-moz-transform: rotate(5deg); /* Firefox */
	filter: progid:DXImageTransform.Microsoft.BasicImage(rotation=3); /* Internet Explorer */
	-o-transform: rotate(5deg); /* Opera */
}

.panelAddAdvent.rotationNo{
	top: 15px;
	left: 10px;
}

#addAdvent .panelAddAdventFon *{
	-webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
	border: 0;
	margin: 2px 10px;
	padding: 0 5px;
	outline: 0;
}

.whitePanel{
	width: 100%;
	height: 100%;
	background: url(<%= asset_path 'design/square.png' %>);
	padding: 10px;
	-webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
}

#editting{
	background: url(<%= asset_path 'design/tex.png' %>);
}

.closeDialog{
	background: url(<%= asset_path 'design/close_button.png' %>);
	width: 84px;
	height: 21px;
	cursor: pointer;
	margin: 0 auto;
	margin-top: 10px;
}

p{
	font-size: 12px;
}