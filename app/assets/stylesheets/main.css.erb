	color: #88a548;
	text-align: center;
	font-size: 14px;
	padding: 8px;
	font-family: cursive;
	word-wrap: break-word;
}

.error.nickName{
	left: 100px;
	bottom: 95px;
}

#showAdvent img{
	margin-right: 20px;
	float: left;
}

#showAdvent span{
	font-size: 15px;
}
.nickName{
	font-size: 16px;
	font-weight: bold;
	color: #88a548;
}